// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--config", "Debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--target", "clean"]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}/build/Simulation",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
